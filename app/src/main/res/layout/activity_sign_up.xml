<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:background="@color/color_login_back"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/welcomeMessageLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/create_an_account"
                android:textSize="30sp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:fontFamily="@font/dm_sans_regular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/we_represent_some_of_the_biggest_and_leading_n_brand_names_in_the_market"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/descriptionColor"
                android:textSize="15sp"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/welcomeMessageLayout"
            android:layout_marginTop="45dp"
            >
            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/email_address"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/emailET"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/emailLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emailLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/password"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/PasswordET"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/passwordLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/confirmPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/passwordLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/confirmPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/confirm_password"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/confirmPasswordET"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/confirmPasswordLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/phoneNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/phoneNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/phone_number"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/phoneNumberET"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phoneNumberLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/phoneNumberLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ClientIDLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/clientIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/client_id"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/clientIDET"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clientIDLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/clientIDLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/AccBalanceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ClientIDLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/AccBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/acc_balance"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/AccBalanceET"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AccBalanceLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/AccBalanceLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ClientENameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/AccBalanceLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/ClientENameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/client_ename"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/clientENameEt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ClientENameLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/ClientENameLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ClientTaxidLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ClientENameLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/ClientTaxidLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/client_taxid"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/clientTaxidET"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ClientTaxidLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/ClientTaxidLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ClientFnameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ClientTaxidLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/ClientFnameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/client_f_name"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/clientFNameET"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ClientFnameLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/ClientFnameLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ClientUuidLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ClientFnameLayout"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/ClientUuidLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/client_uuid"
                android:layout_marginStart="25dp"
                android:textColor="@color/loginTitleColor"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="@font/dm_sans_regular"
                />
            <EditText
                android:id="@+id/clientUuidET"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ClientUuidLabel"
                android:background="@drawable/custom_edit_text"
                app:layout_constraintStart_toStartOf="@id/ClientUuidLabel"
                android:layout_marginTop="10sp"
                android:textSize="17sp"
                android:fontFamily="@font/dm_sans_regular"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

